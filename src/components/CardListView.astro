<style>
  img {
    width: 100%;
    height: auto;
    display: block;
    overflow-clip-margin: content-box;
    overflow: clip;
    object-fit: cover;
  }
  .div-1_2 {
    object-fit: cover;
    display: grid;
    grid-template-columns: 1fr 2fr;
    background-color: #ffffff;
    width: 100%;
    /* min-width: 100px;
    max-width: 700px; */
    color: #233249;
  }
  .div_description {
    padding-left: 20px;
    position: relative;
  }

  @media (min-width: 800px) {
    .div_description {
      padding: 20px;
    }
  }
  div {
    display: block;
    unicode-bidi: isolate;
  }
</style>
